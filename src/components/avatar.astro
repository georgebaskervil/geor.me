---
import { getavatar } from '../getavatar';
const images = getavatar();
let avatar = images[0]; // get the first avatar
---

<style>
  .image-container {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
    border-radius: 10px;
    transition: transform 0.3s ease;
    width: 100%;
    height: 100%;
  }

  .image-container:hover {
    transform: scale(1.05);
  }

  .image-container img {
    width: 100%;
    height: 100%;
    display: block;
    object-fit: cover;
  }
</style>

<article class="flex flex-col gap-4">
    <picture class="image-container">
      <source srcset={`/brand-assets/${avatar}.avif`} type="image/avif">
      <source srcset={`/brand-assets/${avatar}.webp`} type="image/webp">
      <img data-src={`/brand-assets/${avatar}.png`} alt="Avatar" class="lazy" />
    </picture>
</article>

<script>
  window.onload = () => {
    const observer = new IntersectionObserver((entries, observer) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          // Load image
          const img = entry.target as HTMLImageElement;
          if (img.dataset.src) {
            img.src = img.dataset.src;
          }
          // Stop observing
          observer.unobserve(entry.target);
        }
      });
    });
    document.querySelectorAll('img.lazy').forEach(img => {
      observer.observe(img);
    });
  };
</script>